# Rofi shortcuts
super + r ; {r,d,f,p,w}
  rofi -show {run,drun,filebrowser,power-menu -modi power-menu:~/.local/bin/rofi-power-menu,window}

# flameshot shortcuts
super + o ; {f,m,r}
  flameshot {full,screen,gui}

# Volume shortcuts
super + {equal,minus}
  pactl set-sink-volume @DEFAULT_SINK@ {+5%,-5%}

# brightness shortcuts
super + shift + {equal,minus}
  brightnessctl set {+5%,5%-}

# super + space
#   togglepolybar

super + shift + return
  ghostty

space + alt
  ~/.dotfiles/shellscripts/.scripts/keylayouts.sh

super + o ; l
  i3lock
