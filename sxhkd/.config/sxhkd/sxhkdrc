# Rofi shortcuts
super + m ; {r,d,c,f,p,w}
  rofi -theme ~/.config/rofi/launchers/type-4/style-4.rasi -show {run,drun,calc,filebrowser,power-menu -modi power-menu:~/.local/bin/rofi-power-menu,window}

# flameshot shortcuts
super + o ; {f,m,r}
  flameshot {full,screen,gui}

# Volume shortcuts
super + {equal,minus}
  pactl set-sink-volume @DEFAULT_SINK@ {+5%,-5%}

# brightness shortcuts
super + shift + {equal,minus}
  brightnessctl set {+5%,5%-}

super + space
  togglepolybar

super + shift + return
  ghostty

space + alt
  ~/.dotfiles/shellscripts/.scripts/keylayouts.sh
